

@using ELSaman.ViewModels


@model IPagedList<RatingViewModel>


 @section StyleSection{
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/GeneralTable.css"/>

} 
<style>



        .page-link{background-color:#143444; color:#F6EE99; }
        .page-link:hover{background-color:#F6EE99; color:#143444 }
        .disabled{color: #143444; margin-right:15px;}  
        th{text-align:center; font-size:20px; background-color:#2DAAB8; color:#fff;}
        td{text-align:center;}
#btnA {
     width: 12%;
    background-color: #2DAAB8;
    color: #fff;
     font-weight:bold;
    width: 8%;
    padding: 14px 20px;
    margin-right: 55px;
    margin-bottom: 25px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    float: right;
}
#btnA:hover {
 
    width: 17%;
    text-align:center;
}
#Resbtn {
   width: 15%;
    /*background-color: #2DAAB8;*/
    color: #2DAAB8;
    padding: 14px ;
    margin-top: 10px ;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
   font-weight:bold;
   
}
#Resbtn:hover{
    width:30%;
    background-color: #2DAAB8;
    color: #fff;
}

</style>

<body>


<section class="bg-light p-5">
    <h2 style="margin:10px;" class="pb-2">Rating  </h2>
    <a asp-action="Add" asp-controller="Rating" id="btnA">Add</a>
    <div  id="no-more-tables">
<table class="table bg-white">
    <thead>
  <tr>

    <th>RatingID</th>
    <th>RatingValue</th>
  </tr>
  </thead>
  <tbody>
    @foreach(var V in Model)
{  
  <tr>
    <td data-title="RatingID">@V.RatingID</td>
    <td data-title="RatingValue">@V.RatingValue</td>
  @*  <td><a asp-action="Update" asp-controller="Rating" asp-route-ID="@V.RatingID">Update</a></td>*@


  </tr>
    }
    </tbody>
</table>
</div>
</section>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Get", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</div>
</body>


