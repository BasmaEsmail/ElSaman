
@using ELSaman.ViewModels


@model IPagedList<UserViewModel>
@section StyleSection{
<link rel="stylesheet" href="~/assets/css/GeneralTable.css"/>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

} 

     <style>
        
         .page-link{background-color:#143444; color:#F6EE99; }
        .page-link:hover{background-color:#F6EE99; color:#143444 }
        .disabled{color: #143444; margin-right:15px;}
        
        th{text-align:center; font-size:20px; background-color:#2DAAB8; color:#fff;}
        td{text-align:center;}


#btnA {
     width: 12%;
    background-color: #2DAAB8;
    color: #fff;
     font-weight:bold;
    padding: 14px 20px;
    margin-right: 55px;
    margin-bottom: 25px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    float: right;
}
#btnA:hover {
 
    width: 17%;
    text-align:center;
}





    </style>

   


<section class="bg-light p-5">
    <h2 style="margin:10px;" class="pb-2">Users </h2>
     <a asp-action="Add" asp-controller="User" id="btnA">Add</a>
    <div  id="no-more-tables">
<table class="table bg-white">
    <thead>
  <tr>
    <th>NameEn</th>
    <th>NameAr</th>
    <th>Phone</th>
    <th>RegisterDate</th>
    <th>IsDelete</th>
    <th>Action</th>


  </tr>
  </thead>
  <tbody>
   
   @foreach (var U in Model)
  
{
	<tr>
	
	<td data-title="NameEn">@U.NameEN</td>
    <td data-title="NameAr" >@U.NameAR</td>
	<td data-title="Phone" >@U.phone</td>
	<td data-title="RegisterDate">@U.registerDate</td>
	<td data-title="IsDelete">@U.IsDelete</td>
    <td data-title="Action">
   |
   <a asp-action="Remove" asp-controller="User" asp-route-Id="@U.ID" > <i class="fa-solid fa-trash" style="color:red; font-size:20px;"></i>

 </a>
   </td>
 </tr>
}
    </tbody>
</table>
</div>
</section>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Search", new { pageIndex = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
        {
        DisplayItemSliceAndTotal = true,
        ContainerDivClasses = new[] { "navigation" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </div>
    <div>
    <script>
        $(document).ready(function() {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</div>




